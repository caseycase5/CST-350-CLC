@model CST_350_CLC.Models.GameBoardModel

    <h1>Minesweeper Game</h1>
    <hr />
    <div>
        <table class="table" id="gameBoard">
            <thead>
                Minesweeper Game
            </thead>

            <tbody class="table-bordered">
                
                   @for (int i = 0; i < Model.Size; i++) {
                    <tr>
                       @for (int j = 0; j < Model.Size; j++) {
                            <td>
                                <div class="oneButton" id="@Model.Grid[i,j].Id">
                                    <form>
                                        <button class="btn-game btn-info" type="submit" value="@Model.Grid[i,j].Id" name="Id" asp-controller="Game" asp-action="CellClick">
                                            <img id="cellImage @Model.Grid[i,j].Id" src=""/>
                                            @Model.Grid[i, j].CurrentCellText
                                        </button>
                                    </form>
                                </div>

                            </td>
                             }
                    </tr>
                        }       
            </tbody>
        </table>
        </div>
        <br />
        <div id="buttons">
            <a href="/game/index" class="btn btn-primary">Start Over</a>
            <br /><br />

            <form id="saveGame">
                <button class="btn btn-primary" type="submit" asp-controller="Game" asp-action="SaveGame">Save Game</button>
            </form>
            <br />

            <form id="showSavedGames">
                <button class="btn btn-primary" type="submit" asp-controller="Game" asp-action="ShowSavedGames">Show Saved Games</button>
            </form>
        </div>
